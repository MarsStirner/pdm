<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds" debug="true">

    <!-- dump status message on the console as they arrive -->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

    <!-- Основные настройки для консоли, для эксепшен лога-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
        <encoder>
            <pattern>%5p [%d][%thread][%logger{0}] %msg%n</pattern>
        </encoder>
        <param name="target" value="System.out"/>
        <!--<target>System.out</target>-->
    </appender>

    <appender name="STDOUT_ERROR" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <encoder>
            <pattern>%5p [%d][%thread][%logger{0}] %msg%n</pattern>
        </encoder>
        <param name="target" value="System.err"/>
        <!--<target>System.err</target>-->
    </appender>

    <appender name="EXCEPTIONS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ru.korus.tmis.util.logs.filter.ExceptionFilter">
            <exceptionClassName>java.lang.Exception</exceptionClassName>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${com.sun.aas.instanceRoot}/logs/exceptions/exceptions.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
            <MaxHistory>365</MaxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%5p [%d][%thread][%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>


    <!--Логгер для ЗХПД-->
    <appender name="PDM" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>%5p [%d][%thread][%logger{0}] %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${com.sun.aas.instanceRoot}/logs/pdm/pdm.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
    </appender>

    <logger name="ru.korus.tmis.pdm" level="INFO" additivity="false">
        <appender-ref ref="PDM"/>
    </logger>

</configuration>